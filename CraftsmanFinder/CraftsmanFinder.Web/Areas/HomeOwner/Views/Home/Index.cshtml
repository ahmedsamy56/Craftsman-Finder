@model IEnumerable<Category>

<!-- Header -->
<header class="py-5">
    <div class="container px-lg-5">
        <div class="p-4 p-lg-5 bg-light rounded-3 text-center">
            <div class="m-4 m-lg-5">
                <h1 class="display-5 fw-bold">Add a job request</h1>
                <p class="fs-4">Add a new job to the system quickly and easily by specifying job details, requirements, with support for adding photos and Google Maps location and other relevant information.</p>
                <a class="btn btn-primary btn-lg" href="/HomeOwner/JobRequest/CreateJobRequest">Add a job request</a>
            </div>
        </div>
    </div>
</header>

<!-- Page Content -->
<div class="card text-white bg-secondary my-5 py-4 text-center">
    <div class="card-body">
        <p class="text-white m-0">
            <h1>All Categories</h1>
        </p>
    </div>
</div>

<section class="pt-4">
    <div class="container px-lg-5">
        <!-- Page Features -->
        <div class="row gx-lg-5">
            @foreach (var category in Model)
            {
                <!-- Card for Category -->
                <div class="col-lg-6 col-xxl-4 mb-5">
                    <div class="card bg-light border-0 h-100">
                        <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                            <div class="feature bg-primary bg-gradient text-white rounded-3 mb-4 mt-n4">
                                <img src="\@category.Logo" alt="Category Icon" style="width: 40px; height: 40px;">
                            </div>
                            <h2 class="fs-4 fw-bold">@category.Name</h2>
                            <p class="mb-0">@category.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
