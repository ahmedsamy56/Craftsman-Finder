@{
    Layout = "";
}
@using CraftsmanFinder.Entities.Models
@model IEnumerable<Category>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Craftsman Finder</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hero {
            background-color: #007bff;
            color: white;
            padding: 100px 0;
            text-align: center;
        }

        .category-icon {
            font-size: 48px;
            color: #0d6efd;
        }

        .categories {
            padding: 60px 0;
        }

            .categories h2 {
                color: #007bff;
            }

        .testimonial {
            background-color: #f8f9fa;
            padding: 60px 0;
        }

            .testimonial h2 {
                color: #28a745;
            }

        .faq {
            background-color: #fff3cd;
            padding: 60px 0;
        }

            .faq h2 {
                color: #ffbf00;
            }

        .footer {
            background-color: #212529;
            color: #ffffff;
            padding: 20px 0;
        }

        .category-img, .testimonial-img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/HomeOwner/Home/Landing">Craftsman Finder</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#categories">Categories</a></li>
                    <li class="nav-item"><a class="nav-link" href="#testimonials">Testimonials</a></li>
                    <li class="nav-item"><a class="nav-link" href="#faq">FAQ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Identity/Account/Login">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Identity/Account/Register">Register</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1 class="fw-bold">Find the Right Craftsman for Your Needs</h1>
            <p class="lead mt-3">Connecting homeowners with skilled craftsmen for any job, big or small.</p>
            <a href="/Identity/Account/Register" class="btn btn-light btn-lg mt-4">Join Now</a>
        </div>
    </section>

    <!-- Categories Section -->
    <section id="categories" class="categories">
        <div class="container">
            <h2 class="text-center fw-bold mb-5">Our Categories</h2>
            <div class="row text-center">

                @foreach (var category in Model)
                {
                    <a href="/HomeOwner/Category/index/@category.Id" class="col-md-4 mb-4 text-decoration-none">
                        <div>
                            <img src="@category.Logo" alt="@category.Name" class="category-img">
                            <h5 class="mt-3">@category.Name</h5>
                        </div>
                    </a>
                }

            </div>
        </div>
    </section>

    <section id="testimonials" class="testimonial">
        <div class="container">
            <h2 class="text-center fw-bold mb-5">What Our Users Say</h2>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="p-4 bg-white shadow rounded">
                        <p>"Craftsman Finder connected me with the perfect carpenter for my home renovation. Highly recommend!"</p>
                        <p class="fw-bold">- Ahmed Samy</p>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="p-4 bg-white shadow rounded">
                        <p>"The platform is super easy to use, and the electrician I found was very professional."</p>
                        <p class="fw-bold">- Elon Musk</p>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section id="faq" class="faq">
        <div class="container">
            <h2 class="text-center fw-bold mb-5">Frequently Asked Questions</h2>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="faqOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            How does Craftsman Finder work?
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="faqOne" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Craftsman Finder connects homeowners with skilled craftsmen for various tasks. Simply browse categories, select a craftsman, and get the job done!
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="faqTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Is it free to use the platform?
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="faqTwo" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Yes, signing up and browsing categories is completely free. Additional services might have associated costs.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer text-center">
        <div class="container">
            <p class="mb-0">&copy; 2024 Craftsman Finder. All Rights Reserved.</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
